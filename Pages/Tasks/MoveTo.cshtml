@page
@model Tasks.MoveToModel

@{
    ViewData["Title"] = "Move task";
}

<h1>Перемістити до кошику?</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-route-returnUrl="@Model?.ReturnUrl" asp-page-handler="ToBin">
            <input type="hidden" asp-for="Task.TaskId" />
            <input type="hidden" asp-for="Task.IsDeleted" />
            <input type="hidden" asp-for="Task.CreatedAt" />
            <input type="hidden" asp-for="Task.FolderId" />
            <div class="d-flex ps-3 align-items-center fs-5">
                <i class="bi bi-folder fs-2"></i>
                <div class="ms-3">@Model?.Task?.Folder?.Name</div>
            </div>
            <div class="d-flex ps-3 pe-3">
                <div class="fs-2 mt-1">
                    <input type="checkbox" asp-for="Task.IsCompleted" class="form-check-input" onclick="return false;" />
                </div>
                <div class="ms-2 w-100">
                    <textarea asp-for="Task.Title" oninput="auto_grow(this)" onfocus="auto_grow(this)" type="textarea"
                              class="card-text form-control fs-4 mt-1" placeholder="Назва ..." readonly></textarea>

                    <textarea asp-for="Task.Description" oninput="auto_grow(this)" onfocus="auto_grow(this)" type="textarea"
                              class="card-text form-control fs-5 mt-1" placeholder="Опис ..." readonly></textarea>
                    @await Html.PartialAsync("_OkCancelPartial")
                </div>
            </div>
        </form>
    </div>
</div>
