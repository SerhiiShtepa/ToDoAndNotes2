@page
@model Tasks.DeleteModel

@{
    ViewData["Title"] = "Delete task";
}

<h1>Видалити назавжди?</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-route-returnUrl="@Model?.ReturnUrl" asp-route-id="@Model?.Task?.TaskId">
            <div class="d-flex ps-3 align-items-center fs-5">
                <i class="bi bi-folder fs-2"></i>
                <div class="ms-3">@Model?.Task?.Folder?.Name</div>
            </div>
            <div class="d-flex ps-3 pe-3">
                <div class="fs-2 mt-1">
                    <input type="checkbox" asp-for="Task.IsCompleted" class="form-check-input" disabled />
                </div>
                <div class="ms-2 w-100">
                    <textarea asp-for="Task.Title" oninput="auto_grow(this)" onfocus="auto_grow(this)" type="textarea"
                              class="card-text form-control fs-4 mt-1" placeholder="Назва ..." disabled></textarea>

                    <textarea asp-for="Task.Description" oninput="auto_grow(this)" onfocus="auto_grow(this)" type="textarea"
                              class="card-text form-control fs-5 mt-1" placeholder="Опис ..." disabled></textarea>
                    @await Html.PartialAsync("_OkCancelPartial")
                </div>
            </div>
        </form>
    </div>
</div>