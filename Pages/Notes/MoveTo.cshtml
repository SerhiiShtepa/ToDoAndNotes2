@page
@model MoveToModel

@{
    ViewData["Title"] = "Move note";
}

<h1>Перемістити до кошику?</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-route-returnUrl="@Model?.ReturnUrl" asp-page-handler="ToBin">
            <input type="hidden" asp-for="Note.NoteId" />
            <input type="hidden" asp-for="Note.IsDeleted" />
            <input type="hidden" asp-for="Note.CreatedAt" />
            <input type="hidden" asp-for="Note.FolderId" />
            <div class="d-flex ps-3 align-items-center fs-5">
                <i class="bi bi-folder fs-2"></i>
                <div class="ms-3">@Model?.Note?.Folder?.Name</div>
            </div>
            <div class="d-flex flex-column ps-3 pe-3">
                <textarea asp-for="Note.Title" oninput="auto_grow(this)" onfocus="auto_grow(this)" type="textarea"
                          class="card-text form-control fs-4 mt-1" placeholder="Назва ..." readonly></textarea>

                <textarea id="summernoteMove" asp-for="Note.Content" oninput="auto_grow(this)" onfocus="auto_grow(this)" type="textarea"
                          class="card-text form-control fs-5 mt-1" placeholder="Опис ..." readonly></textarea>
                @await Html.PartialAsync("_OkCancelPartial")
            </div>
        </form>
    </div>
</div>
