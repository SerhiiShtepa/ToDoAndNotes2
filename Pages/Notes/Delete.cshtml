@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete note";
}

<h1>Видалити назавжди?</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-route-returnUrl="@Model?.ReturnUrl" asp-route-id="@Model?.Note?.NoteId">
            <div class="d-flex ps-3 align-items-center fs-5">
                <i class="bi bi-folder fs-2"></i>
                <div class="ms-3">@Model?.Note?.Folder?.Name</div>
            </div>
            <div class="d-flex flex-column ps-3 pe-3">
                <textarea asp-for="Note.Title" oninput="auto_grow(this)" onfocus="auto_grow(this)" type="textarea"
                          class="card-text form-control fs-4 mt-1" placeholder="Назва ..." disabled></textarea>

                <textarea asp-for="Note.Content" oninput="auto_grow(this)" onfocus="auto_grow(this)" type="textarea"
                          class="card-text form-control fs-5 mt-1" placeholder="Опис ..." disabled></textarea>
                @await Html.PartialAsync("_OkCancelPartial")
            </div>
        </form>
    </div>
</div>